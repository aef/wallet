{
    "productName": "SimpleWallet",
    "directories": {
        "output": "release/"
    },
    "files": [
        "**/*",
        "!**/*.ts",
        "!release/",
        "!package.json",
        "!package-lock.json"
    ],
    "win": {
        "icon": "dist",
        "target": [
            "portable"
        ]
    },
    "mac": {
        "icon": "src/dist/assets/icon/electron.png",
        "target": [
            "zip",
            "dmg"
        ],
        "publish": {
            "provider": "spaces",
            "name": "simplewallet",
            "region": "ams3"
        }
    },
    "linux": {
        "icon": "dist",
        "target": [
            "AppImage"
        ]
    }
}