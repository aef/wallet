{
    "productName": "SimpleWallet",
    "directories": {
        "output": "release/"
    },
    "files": [
        "**/*"
    ],
    "electronDownload": {
        "cache": "./tmp"
    },
    "win": {
        "icon": "src/dist/assets/icon/electron.png",
        "target": [
            "nsis", 
            "portable"
        ],
        "publish": {
            "provider": "spaces",
            "name": "simplewallet",
            "region": "ams3"
        }
    },
    "mac": {
        "icon": "src/dist/assets/icon/electron.png",
        "target": [
            "zip",
            "dmg"
        ],
        "publish": {
            "provider": "spaces",
            "name": "simplewallet",
            "region": "ams3"
        }
    },
    "linux": {
        "icon": "src/dist/assets/icon/electron.png",
        "target": [
            "AppImage"
        ],
        "publish": {
            "provider": "spaces",
            "name": "simplewallet",
            "region": "ams3"
        }
    }
}